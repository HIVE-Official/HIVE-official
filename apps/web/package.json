{
  "name": "web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "npx eslint . --max-warnings 50",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run --dir src/test/unit",
    "test:integration": "vitest run --dir src/test/integration",
    "test:component": "vitest run --dir src/test/component",
    "test:performance": "vitest run --dir src/test/performance",
    "test:security": "vitest run --dir src/test/security",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:mobile": "playwright test --project=mobile",
    "test:e2e:cross-browser": "playwright test --project=chromium --project=firefox --project=webkit",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:component && npm run test:e2e",
    "test:ci": "npm run test:coverage && npm run test:e2e:cross-browser",
    "test:dev": "vitest --config src/test/test-runner.config.ts --mode development",
    "test:quick": "vitest run --dir src/test/unit --reporter=basic",
    "test:smoke": "playwright test smoke-tests.spec.ts",
    "test:visual": "playwright test --project=visual-regression",
    "test:accessibility": "playwright test --project=accessibility",
    "test:performance:e2e": "playwright test --project=performance"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hive/core": "workspace:*",
    "@hive/hooks": "workspace:*",
    "@hive/tokens": "workspace:*",
    "@hive/ui": "workspace:*",
    "@hookform/resolvers": "^5.1.1",
    "@sendgrid/mail": "^8.1.5",
    "@sentry/nextjs": "^8.47.0",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@tanstack/react-query": "^5.0.0",
    "@tanstack/react-query-devtools": "^5.80.7",
    "clsx": "^2.1.1",
    "firebase": "^11.0.0",
    "framer-motion": "^11.11.17",
    "ioredis": "^5.4.1",
    "isomorphic-dompurify": "^2.26.0",
    "lucide-react": "^0.411.0",
    "next": "^15.3.3",
    "react": "^18",
    "react-dom": "^18",
    "react-firebase-hooks": "^5.1.1",
    "react-hook-form": "^7.57.0",
    "sonner": "^1.5.0",
    "styled-jsx": "^5.1.7",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.4",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.28.0",
    "@hive/eslint-config": "workspace:*",
    "@hive/typescript-config": "workspace:*",
    "@next/bundle-analyzer": "^15.4.4",
    "@playwright/test": "^1.53.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/eslint__js": "^8.42.3",
    "@types/ioredis": "^5.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.5.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.28.0",
    "eslint-config-next": "^14.2.15",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jsdom": "^26.1.0",
    "msw": "^2.10.2",
    "node-mocks-http": "^1.17.2",
    "postcss": "^8.5.5",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.18.2",
    "vitest": "^3.2.3"
  },
  "overrides": {
    "eslint": "$eslint"
  }
}
