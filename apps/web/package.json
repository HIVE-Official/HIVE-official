{
  "name": "web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:safe": "node scripts/check-production-safety.js && next build",
    "build:analyze": "set ANALYZE=true && next build",
    "start": "next start",
    "lint": "npx eslint . --max-warnings 1200",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run --dir src/test/unit",
    "test:integration": "vitest run --dir src/test/integration",
    "test:component": "vitest run --dir src/test/component",
    "test:performance": "vitest run --dir src/test/performance",
    "test:security": "vitest run --dir src/test/security",
    "test:e2e": "playwright test",
    "seed:profiles": "tsx src/scripts/seed-profile-data.ts",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:auth": "node test-runner.js auth",
    "test:onboarding": "node test-runner.js onboarding",
    "test:e2e:mobile": "playwright test --project=mobile",
    "test:e2e:cross-browser": "playwright test --project=chromium --project=firefox --project=webkit",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:component && npm run test:e2e",
    "test:ci": "npm run test:coverage && npm run test:e2e:cross-browser",
    "test:dev": "vitest --config src/test/test-runner.config.ts --mode development",
    "test:quick": "vitest run --dir src/test/unit --reporter=basic",
    "test:smoke": "playwright test smoke-tests.spec.ts",
    "test:visual": "playwright test --project=visual-regression",
    "test:accessibility": "playwright test --project=accessibility",
    "test:performance:e2e": "playwright test --project=performance"
  },
  "dependencies": {
    "@hive/analytics": "workspace:*",
    "@hive/api-client": "workspace:*",
    "@hive/auth-logic": "workspace:*",
    "@hive/core": "workspace:*",
    "@hive/hooks": "workspace:*",
    "@hive/tokens": "workspace:*",
    "@hive/ui": "workspace:*",
    "@hive/utilities": "workspace:*",
    "@hive/validation": "workspace:*",
    "@azure/msal-node": "^2.16.3",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.1.1",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@sendgrid/mail": "^8.1.5",
    "@sentry/nextjs": "^8.47.0",
    "@tanstack/react-query": "^5.0.0",
    "@types/dompurify": "^3.2.0",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "dompurify": "^3.2.6",
    "firebase": "^11.0.0",
    "framer-motion": "^11.11.17",
    "googleapis": "^159.0.0",
    "ioredis": "^5.4.1",
    "isomorphic-dompurify": "^2.26.0",
    "lru-cache": "^11.2.1",
    "lucide-react": "^0.411.0",
    "next": "^15.3.3",
    "next-auth": "^4.24.11",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.57.0",
    "sonner": "^1.5.0",
    "swr": "^2.3.6",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.25.64",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.4.4",
    "@playwright/test": "1.55.0",
    "@tanstack/react-query-devtools": "^5.80.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/ioredis": "^5.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.5.2",
    "autoprefixer": "^10.4.21",
    "dotenv": "^17.2.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.15",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jsdom": "^26.1.0",
    "msw": "^2.10.2",
    "node-mocks-http": "^1.17.2",
    "postcss": "^8.5.5",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.8.3",
    "vitest": "^3.2.3"
  },
  "overrides": {
    "eslint": "$eslint"
  }
}
