{
  "version": 2,
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  },
  "crons": [
    {
      "path": "/api/cron/promote-posts",
      "schedule": "*/15 * * * *"
    }
  ],
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 60
    },
    "app/api/feed/route.ts": {
      "maxDuration": 30
    },
    "app/api/cron/promote-posts/route.ts": {
      "maxDuration": 60
    },
    "app/api/spaces/[spaceId]/promote-post/route.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/admin(.*)",
      "headers": [
        {
          "key": "X-Admin-Portal",
          "value": "HIVE-Admin"
        },
        {
          "key": "Cache-Control",
          "value": "no-store, must-revalidate"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/admin/$1",
      "has": [
        {
          "type": "host",
          "value": "admin.hive.college"
        }
      ]
    },
    {
      "source": "/",
      "destination": "/admin",
      "has": [
        {
          "type": "host",
          "value": "admin.hive.college"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/admin",
      "destination": "https://admin.hive.college",
      "permanent": true,
      "has": [
        {
          "type": "host",
          "value": "www.hive.college"
        }
      ]
    },
    {
      "source": "/admin/(.*)",
      "destination": "https://admin.hive.college/$1",
      "permanent": true,
      "has": [
        {
          "type": "host",
          "value": "www.hive.college"
        }
      ]
    }
  ]
}