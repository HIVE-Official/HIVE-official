{
  "extends": "../../packages/config/typescript/base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@hive/*": [
        "../../packages/*/src"
      ]
    },
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/ui/src/**/*.ts",
    "../../packages/ui/src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "test",
    "tests",
    "**/*.test.ts",
    "**/*.test.tsx",
    "../../packages/ui/src/**/*.test.tsx",
    "src/app/(wip)/**",
    "src/app/api/**",
    "src/components/onboarding/**"
  ]
}
