{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@hive/ui": [
        "../../packages/ui/dist/ui/src/index.d.ts"
      ],
      "@hive/core": [
        "../../packages/core/dist/index.d.ts"
      ],
      "@hive/hooks": [
        "../../packages/hooks/dist/index.d.ts"
      ]
    },
    "types": [
      "@testing-library/jest-dom",
      "vitest/globals"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "src/test/vitest-jest-dom.d.ts",
    ".next-build/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
