{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@hive/ui": ["./src/__stubs__/@hive/ui"],
      "@hive/core": ["./src/__stubs__/@hive/core"],
      "@hive/hooks": ["./src/__stubs__/@hive/hooks"],
      "@hive/auth-logic": ["./src/__stubs__/@hive/core"],
      "@hive/api-client": ["./src/__stubs__/@hive/core"],
      "@hive/validation": ["./src/__stubs__/@hive/core"]
    },
    "types": ["@testing-library/jest-dom", "vitest/globals"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/test/vitest-jest-dom.d.ts"],
  "exclude": ["node_modules"]
}
