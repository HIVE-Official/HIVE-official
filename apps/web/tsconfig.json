{
  "extends": "../../packages/config/typescript/base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@hive/*": [
        "../../packages/*/src"
      ]
    },
    "jsx": "preserve",
    "allowJs": true,
    "incremental": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../packages/*/src/**/*.ts",
    "../../packages/*/src/**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "test",
    "tests",
    "**/*.test.ts",
    "**/*.test.tsx",
    "../../packages/ui/src/**/*.test.tsx",
    "src/app/(wip)/**",
    "src/app/api/**"
  ]
}
