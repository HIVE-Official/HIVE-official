{
  "compilerOptions": {
    "target": "es2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "types": ["node"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "sourceMap": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@hive/*": [
        "../../packages/*/src"
      ]
    },
    "jsx": "preserve",
    "allowJs": true,
    "incremental": true,
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../packages/*/src/**/*.ts",
    "../../packages/*/src/**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "test",
    "tests",
    "**/*.test.ts",
    "**/*.test.tsx",
    "../../packages/ui/src/**/*.test.tsx",
    "src/app/(wip)/**",
    "src/app/api/**"
  ]
}
