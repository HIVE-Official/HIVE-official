// Bounded Context Owner: Governance Guild
{
  "extends": "../../tsconfig.base.json",
  "include": [
    "src/app/**/*",
    "src/middleware.ts",
    ".next/types/**/*.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@hive/ui": [
        "../../packages/ui/src/index.ts"
      ],
      "@hive/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@hive/firebase": [
        "../../packages/firebase/src/index.ts"
      ],
      "@hive/firebase/*": [
        "../../packages/firebase/src/*"
      ],
      "@hive/tokens": [
        "../../packages/tokens/src/tokens.ts"
      ],
      "@hive/tokens/*": [
        "../../packages/tokens/src/*"
      ],
      "@/*": [
        "../../packages/ui/src/*"
      ],
      "@/components/*": [
        "../../packages/ui/src/components/*"
      ],
      "@core": [
        "../../packages/core/src/index.ts"
      ],
      "@core/*": [
        "../../packages/core/src/*"
      ],
      "@admin/server/*": [
        "src/server/*"
      ]
    },
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": [
    "node_modules",
    ".next/**"
  ]
}
