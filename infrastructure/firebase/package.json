{
  "name": "@hive/firebase-security-tests",
  "version": "1.0.0",
  "description": "Security rules testing for HIVE Firebase project",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:security": "jest tests/firestore-security.test.ts",
    "emulator": "firebase emulators:start --only firestore",
    "emulator:test": "firebase emulators:exec --only firestore 'npm test'"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.6",
    "firebase": "^10.7.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/tests/**/*.test.ts"
    ],
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx"],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "setupFilesAfterEnv": ["<rootDir>/tests/jest.setup.ts"]
  }
} 