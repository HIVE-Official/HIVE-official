# HIVE Production Environment Variables
# Copy this to .env.production and fill in your values
# NEVER commit the actual .env.production file!

# ============================================
# FIREBASE CLIENT CONFIGURATION (Public - Browser)
# Get these from Firebase Console > Project Settings > General
# ============================================
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=hive-production.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=hive-production
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=hive-production.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# ============================================
# FIREBASE ADMIN CONFIGURATION (Secret - Server Only)
# Get from Firebase Console > Project Settings > Service Accounts
# ============================================
FIREBASE_PROJECT_ID=hive-production
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@hive-production.iam.gserviceaccount.com
# Important: Keep the quotes and \n characters in the private key
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# ============================================
# AUTHENTICATION
# ============================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=
NEXTAUTH_URL=https://yourdomain.com

# ============================================
# CAMPUS CONFIGURATION (UB Specific)
# ============================================
NEXT_PUBLIC_CAMPUS_ID=ub-buffalo
NEXT_PUBLIC_CAMPUS_NAME=University at Buffalo
NEXT_PUBLIC_CAMPUS_EMAIL_DOMAIN=buffalo.edu
NEXT_PUBLIC_CAMPUS_SHORT_NAME=UB

# ============================================
# APP CONFIGURATION
# ============================================
NEXT_PUBLIC_ENVIRONMENT=production
NEXT_PUBLIC_APP_NAME=HIVE
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NEXT_PUBLIC_APP_VERSION=1.0.0

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_APP_CHECK=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false
NEXT_PUBLIC_ENABLE_BUILDER_APPLICATIONS=true
NEXT_PUBLIC_ENABLE_RITUALS=true

# ============================================
# RECOMMENDATIONS (Spaces)
# ============================================
# Enable blended ranking (activity + affinity weighting)
NEXT_PUBLIC_RECO_BLEND_READY=false
# Optional forced enable (overrides READY)
NEXT_PUBLIC_RECO_BLEND_FORCE=false
# Optional direct on/off switch in dev/testing
NEXT_PUBLIC_RECO_BLEND=false
# Campus-level cache TTL for ranking inputs (ms). 0 disables.
RECO_CACHE_TTL_MS=10000
# Max consecutive repeats of same type in blended interleave (1-5)
NEXT_PUBLIC_RECO_REPEAT_CAP=2

# ============================================
# FIREBASE APP CHECK (Security)
# Get from Firebase Console > App Check
# ============================================
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=

# ============================================
# RATE LIMITING (Optional - for Redis)
# ============================================
REDIS_URL=
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ============================================
# ERROR MONITORING (Optional - Sentry)
# ============================================
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# ============================================
# STORAGE LIMITS
# ============================================
NEXT_PUBLIC_MAX_FILE_SIZE=10485760  # 10MB in bytes
NEXT_PUBLIC_MAX_IMAGE_SIZE=5242880  # 5MB in bytes
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif

# ============================================
# PERFORMANCE THRESHOLDS
# ============================================
NEXT_PUBLIC_MAX_LOAD_TIME=3000      # 3 seconds
NEXT_PUBLIC_MAX_API_RESPONSE=1000   # 1 second
NEXT_PUBLIC_MAX_QUERY_TIME=500      # 500ms

# ============================================
# EXTERNAL FEEDS (Engage RSS)
# ============================================
# Default Engage feed for UB (override per campus as needed)
ENGAGE_RSS_URL=https://buffalo.campuslabs.com/engage/events.rss
# Secret required to call the import API in production
RSS_IMPORT_SECRET=
# Use Firestore repositories for spaces/posts
USE_FIRESTORE_SPACES=true
# Dev seeds should be disabled in production
ENABLE_DEV_SEEDS=false
# Default leader for auto-created Spaces from Engage (can be a service account profileId)
DEFAULT_SPACE_LEADER_ID=system
