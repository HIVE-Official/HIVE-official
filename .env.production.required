# HIVE Production Environment Variables
# CRITICAL: All variables marked REQUIRED must be set for production deployment

# ============================================
# FIREBASE CLIENT CONFIGURATION (REQUIRED)
# ============================================
# Get these from Firebase Console > Project Settings > General
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Optional but recommended for analytics
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# ============================================
# FIREBASE ADMIN SDK (REQUIRED FOR SERVER)
# ============================================
# Get from Firebase Console > Project Settings > Service Accounts
# Download the private key JSON and set these values
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Alternative: Set the full service account JSON (base64 encoded)
FIREBASE_SERVICE_ACCOUNT_KEY=

# ============================================
# APPLICATION CONFIGURATION (REQUIRED)
# ============================================
NEXT_PUBLIC_APP_URL=https://hive.college
NEXT_PUBLIC_CAMPUS_ID=ub-buffalo
NEXT_PUBLIC_CAMPUS_NAME="University at Buffalo"
NEXT_PUBLIC_CAMPUS_DOMAIN=buffalo.edu

# ============================================
# SECURITY CONFIGURATION (REQUIRED)
# ============================================
# Generate with: openssl rand -hex 32
NEXTAUTH_SECRET=
JWT_SECRET=

# Session configuration
SESSION_COOKIE_NAME=hive-session
SESSION_MAX_AGE=2592000 # 30 days in seconds

# ============================================
# RATE LIMITING (REQUIRED)
# ============================================
# Redis connection for rate limiting (use Upstash or Redis Cloud)
REDIS_URL=
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# EMAIL SERVICE (REQUIRED)
# ============================================
# SendGrid, Postmark, or Resend
EMAIL_SERVICE_PROVIDER=sendgrid
EMAIL_API_KEY=
EMAIL_FROM_ADDRESS=noreply@hive.college
EMAIL_FROM_NAME=HIVE

# ============================================
# MONITORING & ANALYTICS (REQUIRED)
# ============================================
# Sentry for error tracking
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# ============================================
# SEARCH SERVICE (OPTIONAL BUT RECOMMENDED)
# ============================================
# Algolia for search
NEXT_PUBLIC_ALGOLIA_APP_ID=
NEXT_PUBLIC_ALGOLIA_SEARCH_KEY=
ALGOLIA_ADMIN_KEY=
ALGOLIA_INDEX_PREFIX=prod_

# ============================================
# CDN & STORAGE (OPTIONAL)
# ============================================
# Cloudflare or Fastly
CDN_URL=https://cdn.hive.college
IMAGE_OPTIMIZATION_URL=

# ============================================
# FEATURE FLAGS (OPTIONAL)
# ============================================
NEXT_PUBLIC_ENABLE_RITUALS=true
NEXT_PUBLIC_ENABLE_TOOLS=false
NEXT_PUBLIC_ENABLE_EVENTS=true
NEXT_PUBLIC_ENABLE_DIRECT_MESSAGES=false

# ============================================
# DEVELOPMENT OVERRIDES (NEVER SET IN PROD)
# ============================================
# NEXT_PUBLIC_USE_EMULATOR=false
# NEXT_PUBLIC_EMULATOR_HOST=
# NEXT_PUBLIC_BYPASS_AUTH=false