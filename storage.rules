rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isSpaceMember(spaceId) {
      return request.auth != null && 
        firestore.exists(/databases/(default)/documents/spaces/$(spaceId)/members/$(request.auth.uid));
    }
    
    function isSpaceLeader(spaceId) {
      return request.auth != null && 
        firestore.get(/databases/(default)/documents/spaces/$(spaceId)/members/$(request.auth.uid)).data.role in ['leader', 'moderator'];
    }
    
    function isValidImage() {
      return request.resource.contentType.matches('image/.*') &&
        request.resource.size < 10 * 1024 * 1024; // 10MB max
    }
    
    function isValidDocument() {
      return request.resource.contentType.matches('application/pdf|application/msword|application/vnd.*') &&
        request.resource.size < 25 * 1024 * 1024; // 25MB max
    }
    
    function isValidVideo() {
      return request.resource.contentType.matches('video/.*') &&
        request.resource.size < 100 * 1024 * 1024; // 100MB max
    }
    
    // User profile images
    match /users/{userId}/profile/{fileName} {
      allow read: if true; // Public profile images
      allow write: if isOwner(userId) && isValidImage();
      allow delete: if isOwner(userId);
    }
    
    // User private files
    match /users/{userId}/private/{allPaths=**} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && 
        (isValidImage() || isValidDocument());
      allow delete: if isOwner(userId);
    }
    
    // Space assets (logos, banners, etc.)
    match /spaces/{spaceId}/assets/{fileName} {
      allow read: if true; // Public space assets
      allow write: if isSpaceLeader(spaceId) && isValidImage();
      allow delete: if isSpaceLeader(spaceId);
    }
    
    // Space posts attachments
    match /spaces/{spaceId}/posts/{postId}/{fileName} {
      allow read: if isSpaceMember(spaceId) || 
        firestore.get(/databases/(default)/documents/spaces/$(spaceId)).data.visibility == 'public';
      allow write: if isSpaceMember(spaceId) && 
        (isValidImage() || isValidDocument() || isValidVideo());
      allow delete: if isOwner(resource.metadata.uploadedBy) || isSpaceLeader(spaceId);
    }
    
    // Space events attachments
    match /spaces/{spaceId}/events/{eventId}/{fileName} {
      allow read: if isSpaceMember(spaceId) || 
        firestore.get(/databases/(default)/documents/spaces/$(spaceId)).data.visibility == 'public';
      allow write: if isSpaceMember(spaceId) && 
        (isValidImage() || isValidDocument());
      allow delete: if isOwner(resource.metadata.uploadedBy) || isSpaceLeader(spaceId);
    }
    
    // Tool assets
    match /tools/{toolId}/assets/{fileName} {
      allow read: if true; // Public tool assets
      allow write: if isAuthenticated() && 
        firestore.get(/databases/(default)/documents/tools/$(toolId)).data.creatorId == request.auth.uid &&
        (isValidImage() || isValidDocument());
      allow delete: if isAuthenticated() && 
        firestore.get(/databases/(default)/documents/tools/$(toolId)).data.creatorId == request.auth.uid;
    }
    
    // Ritual media
    match /rituals/{ritualId}/media/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
        firestore.exists(/databases/(default)/documents/rituals/$(ritualId)/participants/$(request.auth.uid)) &&
        (isValidImage() || isValidVideo());
      allow delete: if isOwner(resource.metadata.uploadedBy);
    }
    
    // Achievement badges
    match /achievements/{achievementId}/badge.{ext} {
      allow read: if true; // Public achievement badges
      allow write: if false; // Only admins can upload via Firebase Admin SDK
      allow delete: if false;
    }
    
    // Feed attachments (temporary storage for feed items)
    match /feed/temp/{userId}/{fileName} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && 
        (isValidImage() || isValidDocument()) &&
        request.resource.metadata.expiresAt != null; // Must have expiration
      allow delete: if isOwner(userId);
    }
    
    // System assets (managed by admins only)
    match /system/{allPaths=**} {
      allow read: if true; // Public system assets
      allow write: if false; // Only via Admin SDK
      allow delete: if false;
    }
    
    // Temporary uploads (auto-deleted after 24 hours)
    match /temp/{sessionId}/{fileName} {
      allow read: if isAuthenticated() && 
        resource.metadata.uploadedBy == request.auth.uid;
      allow write: if isAuthenticated() && 
        request.resource.size < 50 * 1024 * 1024 && // 50MB max
        request.resource.metadata.uploadedBy == request.auth.uid &&
        request.resource.metadata.expiresAt != null;
      allow delete: if isOwner(resource.metadata.uploadedBy);
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
      allow delete: if false;
    }
  }
}
