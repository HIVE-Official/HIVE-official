rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public assets (read-only)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }

    // Pending media uploads scoped by space and uploader (private to uploader)
    // Path: spaces/{spaceId}/pending/{uploaderId}/{filename}
    match /spaces/{spaceId}/pending/{uploaderId}/{filename=**} {
      allow read: if request.auth != null && request.auth.uid == uploaderId;
      allow write: if request.auth != null
        && request.auth.uid == uploaderId
        && request.resource.size < 25 * 1024 * 1024
        && request.resource.contentType.matches('image/.*|video/.*');
      allow delete: if request.auth != null && request.auth.uid == uploaderId;
    }

    // Approved media (server-managed). Client reads allowed for authenticated users.
    // Path: spaces/{spaceId}/media/{filename}
    match /spaces/{spaceId}/media/{filename=**} {
      allow read: if request.auth != null;
      allow write, delete: if false; // Server moves/copies approved files here via Admin SDK
    }

    // Generic user uploads (private to owner)
    // Path: uploads/{uid}/{filename}
    match /uploads/{uid}/{filename=**} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if request.auth != null
        && request.auth.uid == uid
        && request.resource.size < 25 * 1024 * 1024
        && request.resource.contentType.matches('image/.*|video/.*|application/pdf');
      allow delete: if request.auth != null && request.auth.uid == uid;
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
