rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isVerifiedStudent() {
      return isAuthenticated() && 
        request.auth.token.email_verified == true &&
        request.auth.token.email.matches('.*@(buffalo|cornell|syracuse|rit)\\.edu$');
    }
    
    function isSpaceMember(spaceId) {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/spaces/$(spaceId)/members/$(request.auth.uid));
    }
    
    function isSpaceLeader(spaceId) {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/spaces/$(spaceId)/members/$(request.auth.uid)).data.role in ['leader', 'admin'];
    }
    
    function canModerateSpace(spaceId) {
      return isSpaceLeader(spaceId) || 
        get(/databases/$(database)/documents/spaces/$(spaceId)/members/$(request.auth.uid)).data.role == 'moderator';
    }
    
    // User documents
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
      
      // User subcollections
      match /notifications/{notificationId} {
        allow read: if isOwner(userId);
        allow create: if isAuthenticated();
        allow update: if isOwner(userId);
        allow delete: if isOwner(userId);
      }
      
      match /achievements/{achievementId} {
        allow read: if isAuthenticated();
        allow write: if isOwner(userId);
      }
      
      match /milestones/{milestoneId} {
        allow read: if isOwner(userId) || 
          (isAuthenticated() && resource.data.visibility == 'public');
        allow write: if isOwner(userId);
      }
      
      match /activities/{activityId} {
        allow read: if isOwner(userId) || 
          (isAuthenticated() && resource.data.visibility != 'private');
        allow create: if isAuthenticated();
        allow update, delete: if isOwner(userId);
      }
      
      match /integrations/{integrationId} {
        allow read, write: if isOwner(userId);
      }
      
      match /preferences/{preferenceId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Spaces documents
    match /spaces/{spaceId} {
      allow read: if isAuthenticated();
      allow create: if isVerifiedStudent();
      allow update: if isSpaceLeader(spaceId);
      allow delete: if false; // Spaces cannot be deleted, only archived
      
      // Space subcollections
      match /posts/{postId} {
        allow read: if isAuthenticated();
        allow create: if isSpaceMember(spaceId);
        allow update: if request.auth.uid == resource.data.authorId || 
          canModerateSpace(spaceId);
        allow delete: if request.auth.uid == resource.data.authorId || 
          canModerateSpace(spaceId);
        
        // Post interactions
        match /comments/{commentId} {
          allow read: if isAuthenticated();
          allow create: if isSpaceMember(spaceId);
          allow update: if request.auth.uid == resource.data.authorId;
          allow delete: if request.auth.uid == resource.data.authorId || 
            canModerateSpace(spaceId);
        }
        
        match /reactions/{userId} {
          allow read: if isAuthenticated();
          allow write: if isOwner(userId) && isSpaceMember(spaceId);
        }
      }
      
      match /events/{eventId} {
        allow read: if isAuthenticated();
        allow create: if isSpaceMember(spaceId);
        allow update: if request.auth.uid == resource.data.createdBy || 
          canModerateSpace(spaceId);
        allow delete: if request.auth.uid == resource.data.createdBy || 
          isSpaceLeader(spaceId);
        
        match /attendees/{userId} {
          allow read: if isAuthenticated();
          allow write: if isOwner(userId) && isSpaceMember(spaceId);
        }
      }
      
      match /members/{userId} {
        allow read: if isAuthenticated();
        allow create: if isOwner(userId) && isVerifiedStudent();
        allow update: if isSpaceLeader(spaceId) || 
          (isOwner(userId) && resource.data.role == request.resource.data.role);
        allow delete: if isOwner(userId) || isSpaceLeader(spaceId);
      }
      
      match /tools/{toolId} {
        allow read: if isSpaceMember(spaceId);
        allow create: if isSpaceMember(spaceId);
        allow update: if request.auth.uid == resource.data.createdBy || 
          isSpaceLeader(spaceId);
        allow delete: if isSpaceLeader(spaceId);
      }
      
      match /rituals/{ritualId} {
        allow read: if isSpaceMember(spaceId);
        allow create: if isSpaceMember(spaceId);
        allow update: if request.auth.uid == resource.data.createdBy || 
          canModerateSpace(spaceId);
        allow delete: if isSpaceLeader(spaceId);
        
        match /participants/{userId} {
          allow read: if isAuthenticated();
          allow write: if isOwner(userId) && isSpaceMember(spaceId);
        }
      }
      
      match /pinned/{itemId} {
        allow read: if isSpaceMember(spaceId);
        allow write: if canModerateSpace(spaceId);
      }
    }
    
    // Tools marketplace
    match /tools/{toolId} {
      allow read: if isAuthenticated();
      allow create: if isVerifiedStudent();
      allow update: if request.auth.uid == resource.data.createdBy;
      allow delete: if request.auth.uid == resource.data.createdBy;
      
      match /versions/{versionId} {
        allow read: if isAuthenticated();
        allow write: if request.auth.uid == 
          get(/databases/$(database)/documents/tools/$(toolId)).data.createdBy;
      }
      
      match /analytics/{date} {
        allow read: if request.auth.uid == 
          get(/databases/$(database)/documents/tools/$(toolId)).data.createdBy;
        allow create, update: if isAuthenticated();
        allow delete: if false;
      }
      
      match /reviews/{userId} {
        allow read: if isAuthenticated();
        allow write: if isOwner(userId);
      }
    }
    
    // Rituals (campus-wide)
    match /rituals/{ritualId} {
      allow read: if isAuthenticated();
      allow create: if isVerifiedStudent();
      allow update: if request.auth.uid == resource.data.createdBy || 
        resource.data.moderators.hasAny([request.auth.uid]);
      allow delete: if false; // Rituals are never deleted, only archived
      
      match /instances/{instanceId} {
        allow read: if isAuthenticated();
        allow write: if request.auth.uid == 
          get(/databases/$(database)/documents/rituals/$(ritualId)).data.createdBy;
      }
      
      match /participants/{userId} {
        allow read: if isAuthenticated();
        allow write: if isOwner(userId);
      }
    }
    
    // Feed aggregation
    match /feed/{userId}/items/{itemId} {
      allow read: if isOwner(userId);
      allow write: if false; // Feed items are written by Cloud Functions only
    }
    
    // Chat messages (DMs)
    match /conversations/{conversationId} {
      allow read: if isAuthenticated() && 
        request.auth.uid in resource.data.participants;
      allow create: if isAuthenticated() && 
        request.auth.uid in request.resource.data.participants;
      allow update: if isAuthenticated() && 
        request.auth.uid in resource.data.participants;
      allow delete: if false;
      
      match /messages/{messageId} {
        allow read: if isAuthenticated() && 
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        allow create: if isAuthenticated() && 
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants &&
          request.auth.uid == request.resource.data.senderId;
        allow update: if request.auth.uid == resource.data.senderId;
        allow delete: if request.auth.uid == resource.data.senderId;
      }
    }
    
    // Reports and moderation
    match /reports/{reportId} {
      allow read: if false; // Only admins via Admin SDK
      allow create: if isAuthenticated();
      allow update, delete: if false;
    }
    
    // System collections (read-only for users)
    match /campus_events/{eventId} {
      allow read: if isAuthenticated();
      allow write: if false; // Admin only via Admin SDK
    }
    
    match /announcements/{announcementId} {
      allow read: if isAuthenticated();
      allow write: if false; // Admin only via Admin SDK
    }
    
    // Analytics (write-only for users)
    match /analytics/{document=**} {
      allow read: if false; // Admin only via Admin SDK
      allow create: if isAuthenticated();
      allow update, delete: if false;
    }
  }
}