{
  "name": "hive-ui",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.1.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:quick": "turbo run lint --filter=!web",
    "lint:web": "eslint apps/web --max-warnings 50",
    "lint:packages": "turbo run lint --filter=!web",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "clean": "turbo run clean",
    "clean:node": "rm -rf node_modules && pnpm install",
    "clean:build": "turbo run clean && rm -rf apps/*/node_modules packages/*/node_modules",
    "storybook": "turbo run storybook",
    "build-storybook": "turbo run build-storybook",
    "fix:memory": "node fix-syntax-errors.js",
    "build:production": "turbo run build",
    "lint:ci": "turbo run lint"
  },
  "dependencies": {
    "turbo": "^2.5.4"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "eslint-plugin-import": "^2.29.1",
    "glob": "^11.0.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/config/*"
  ],
  "pnpm": {
    "overrides": {
      "react": "^18.0.0",
      "react-dom": "^18.0.0",
      "@types/react": "^18.0.0",
      "@types/react-dom": "^18.0.0",
      "framer-motion": "^11.11.17",
      "esbuild@<=0.24.2": ">=0.25.0",
      "form-data@>=4.0.0 <4.0.4": ">=4.0.4",
      "form-data@<2.5.4": ">=2.5.4",
      "@eslint/plugin-kit@<0.3.4": ">=0.3.4",
      "axios": "^1.12.0"
    }
  },
  "dependencies": {
    "lucide-react": "^0.411.0",
    "recharts": "^3.1.0",
    "vitest": "^3.2.4"
  }
}
