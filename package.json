{
  "name": "hive-ui",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.1.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "clean": "turbo run clean",
    "storybook": "turbo run storybook",
    "build-storybook": "turbo run build-storybook",
    "workflow-check": "node scripts/workflow-check.js",
    "design-check": "node scripts/design-system-check.js",
    "pre-work": "pnpm workflow-check",
    "safe-start": "pnpm workflow-check && pnpm dev",
    "component-check": "node scripts/design-system-check.js",
    "ai-prompt": "node scripts/ai-workflow-prompt.js",
    "ai:context": "node scripts/ai-context-analyzer.js",
    "ai:prioritize": "node scripts/ai-task-prioritizer.js",
    "ai:validate": "node scripts/ai-quality-validator.js",
    "ai:suggest": "node scripts/ai-task-prioritizer.js",
    "ai:quality": "node scripts/ai-quality-validator.js",
    "ai:analyze": "pnpm ai:context && pnpm ai:prioritize",
    "ai:full-check": "pnpm ai:context && pnpm ai:prioritize && pnpm ai:validate",
    "workflow:check": "./scripts/workflow/hive-check.sh",
    "workflow:fix": "./scripts/workflow/hive-check.sh --fix",
    "workflow:feature": "./scripts/workflow/start-feature.sh",
    "workflow:ship": "./scripts/workflow/ship-production.sh",
    "workflow:precommit": "./scripts/workflow/pre-commit.sh",
    "ship": "pnpm workflow:ship",
    "feature": "pnpm workflow:feature"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "eslint-plugin-import": "^2.29.1",
    "glob": "^11.0.3",
    "turbo": "^2.5.4"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/config/*"
  ],
  "pnpm": {
    "overrides": {
      "react": "^18.0.0",
      "react-dom": "^18.0.0",
      "@types/react": "^18.0.0",
      "@types/react-dom": "^18.0.0",
      "framer-motion": "^11.11.17",
      "esbuild@<=0.24.2": ">=0.25.0",
      "form-data@>=4.0.0 <4.0.4": ">=4.0.4",
      "form-data@<2.5.4": ">=2.5.4",
      "form-data": ">=4.0.4",
      "@eslint/plugin-kit@<0.3.4": ">=0.3.4",
      "next@>=15.0.0 <=15.4.4": ">=15.4.5",
      "next@>=15.0.0-canary.0 <15.4.7": ">=15.4.7"
    }
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "lucide-react": "^0.411.0",
    "recharts": "^3.1.0",
    "sharp": "^0.34.3",
    "vitest": "^3.2.4"
  }
}
