{
  "name": "hive-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:seed:schools": "cross-env dotenv_config_path=firebase/scripts/.env ts-node -r dotenv/config --project firebase/scripts/tsconfig.json firebase/scripts/seed-schools.ts",
    "db:verify:schools": "cross-env dotenv_config_path=firebase/scripts/.env ts-node -r dotenv/config --project firebase/scripts/tsconfig.json firebase/scripts/verify-schools.ts"
  },
  "devDependencies": {
    "@hive/eslint-config": "workspace:*",
    "@hive/typescript-config": "workspace:*",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "turbo": "^2.0.4",
    "zod": "^3.23.8"
  },
  "packageManager": "pnpm@9.1.1",
  "dependencies": {
    "@radix-ui/react-context-menu": "^2.2.15",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@tanstack/react-query": "^5.80.6",
    "@tanstack/react-query-devtools": "^5.80.6",
    "firebase-admin": "^13.2.0",
    "i18next": "^25.2.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.514.0",
    "react-i18next": "^15.5.2",
    "zustand": "^5.0.5"
  }
}
