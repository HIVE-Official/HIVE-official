{
  "name": "hive-foundation",
  "version": "0.1.0",
  "private": true,
  "description": "Documentation and blueprint workspace for the HIVE rebuild.",
  "scripts": {
    "preinstall": "node ./scripts/check-node.mjs",
    "dev": "pnpm --filter web dev",
    "dev:e2e": "pnpm --filter e2e dev",
    "dev:admin": "pnpm --filter admin dev",
    "build": "pnpm --filter web build",
    "build:e2e": "pnpm --filter e2e build",
    "build:admin": "pnpm --filter admin build",
    "start": "pnpm --filter web start",
    "start:e2e": "pnpm --filter e2e start",
    "start:admin": "pnpm --filter admin start",
    "storybook": "pnpm --filter @hive/ui storybook",
    "storybook:build": "pnpm --filter @hive/ui build-storybook",
    "uimode": "node ./scripts/uimode.mjs",
    "lint": "eslint --no-error-on-unmatched-pattern \"apps/web/src/contexts/{auth,onboarding,profile}/**/*.{ts,tsx}\"",
    "lint:workspace": "eslint --no-error-on-unmatched-pattern \"apps/*/src/**/*.{ts,tsx}\" \"packages/**/*.{ts,tsx}\"",
    "lint:all": "eslint --no-error-on-unmatched-pattern \"apps/web/src/**/*.{ts,tsx}\" \"packages/**/*.{ts,tsx}\"",
    "eslint:report": "eslint --no-error-on-unmatched-pattern -f json -o reports/eslint.json \"apps/web/src/**/*.{ts,tsx}\" \"packages/**/*.{ts,tsx}\"",
    "lint:tokens": "node ./scripts/lint-tokens.mjs",
    "lint:ui-imports": "node ./scripts/lint-ui-imports.mjs",
    "lint:client-directives": "node ./scripts/lint-client-directives.mjs",
    "audit:spaces": "tsx ./scripts/audit-spaces-schema.ts",
    "typecheck": "tsc -p packages/core/tsconfig.json --noEmit && tsc -p apps/web/tsconfig.json --noEmit && tsc -p apps/admin/tsconfig.json --noEmit",
    "test": "vitest --config vitest.config.ts --run",
    "test:rules": "firebase emulators:exec --only firestore --project hive-spaces-rules \"pnpm vitest --config vitest.config.ts --run apps/web/src/server/spaces/firestore.rules.test.ts\"",
    "test:e2e": "playwright test -c packages/ui/playwright.config.ts",
    "fake-mailer": "ts-node ./scripts/fake-mailer.ts",
    "seed:profile": "ts-node ./scripts/seed-profile.ts",
    "ops:spaces-observability": "tsx ./scripts/ops/configure-spaces-observability.ts",
    "ops:fetch-engage-rss": "tsx ./scripts/ops/fetch-engage-rss.ts",
    "ops:analyze-engage": "tsx ./scripts/ops/analyze-engage-sample.ts",
    "ops:engage-import": "tsx ./scripts/ops/run-engage-import.ts",
    "ops:list-spaces": "tsx ./scripts/ops/list-spaces.ts",
    "ops:cleanup-spaces": "tsx ./scripts/ops/cleanup-spaces.ts",
    "ops:bootstrap-engage-spaces": "tsx ./scripts/ops/bootstrap-engage-spaces.ts",
    "ops:apply-taxonomy": "tsx ./scripts/ops/apply-taxonomy.ts",
    "ops:audit-classification": "tsx ./scripts/ops/audit-classification.ts",
    "ops:seed-engage-events": "tsx ./scripts/ops/seed-engage-events.ts",
    "ops:sync-space-events": "tsx ./scripts/ops/sync-space-events.ts",
    "ops:refresh-connections": "tsx ./scripts/ops/refresh-profile-connections.ts",
    "indexes:validate": "node ./scripts/validate-firestore-indexes.mjs",
    "indexes:deploy": "node ./scripts/deploy-firestore-indexes.mjs",
    "rules:deploy": "node ./scripts/deploy-firestore-rules.mjs",
    "seed:firestore": "node ./scripts/seed-firestore.mjs"
  },
  "dependencies": {
    "@dataconnect/generated": "link:src/dataconnect-generated",
    "firebase-admin": "^12.6.0",
    "gsap": "^3.13.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@firebase/rules-unit-testing": "^4.0.1",
    "@next/eslint-plugin-next": "^15.5.4",
    "@playwright/test": "^1.56.0",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.11.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "fast-xml-parser": "^4.5.3",
    "firebase-tools": "^13.5.2",
    "globals": "^16.4.0",
    "google-auth-library": "^9.14.1",
    "googleapis": "^128.0.0",
    "jsdom": "^27.0.0",
    "next": "^15.0.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  },
  "engines": {
    "node": ">=20 <21",
    "pnpm": ">=10.18.2"
  },
  "packageManager": "pnpm@10.18.2+sha512.9fb969fa749b3ade6035e0f109f0b8a60b5d08a1a87fdf72e337da90dcc93336e2280ca4e44f2358a649b83c17959e9993e777c2080879f3801e6f0d999ad3dd"
}
