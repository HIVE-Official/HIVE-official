{
  "name": "hive-ui",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.1.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "web": "turbo run dev --filter=web...",
    "admin": "turbo run dev --filter=admin...",
    "storybook": "pnpm --filter @hive/ui storybook",
    "lint": "NODE_OPTIONS=--dns-result-order=ipv4first TURBO_TELEMETRY_DISABLED=1 NEXT_TELEMETRY_DISABLED=1 turbo run lint",
    "typecheck": "turbo run typecheck",
    "validate": "pnpm lint && pnpm typecheck",
    "test": "turbo run test --filter=@hive/*",
    "test:e2e": "turbo run test:e2e",
    "clean": "turbo run clean",
    "build-storybook": "pnpm --filter @hive/ui build-storybook",
    "storybook:smoke": "pnpm --filter @hive/ui build-storybook --dry-run --quiet"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/eslint__js": "^9.14.0",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@typescript-eslint/parser": "^8.35.0",
    "cpy-cli": "^5.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.2.0",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/config/*"
  ],
  "pnpm": {
    "overrides": {
      "@types/react": "^19.0.0",
      "@types/react-dom": "^19.0.0"
    }
  },
  "dependencies": {
    "@tanstack/react-query-devtools": "^5.81.2",
    "geist": "^1.4.2",
    "lucide-react": "^0.523.0",
    "next-themes": "^0.4.6",
    "zod": "^3.25.67"
  }
}
