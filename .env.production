# HIVE Production Environment Variables
# Copy this file to .env.local and fill in your production values

# Firebase Configuration (Production)
NEXT_PUBLIC_FIREBASE_API_KEY=your-production-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=hive-9265c.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=hive-9265c
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=hive-9265c.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Firebase Admin SDK (Server-side only)
FIREBASE_PROJECT_ID=hive-9265c
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@hive-9265c.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key-here\n-----END PRIVATE KEY-----"

# Application URLs
NEXT_PUBLIC_APP_URL=https://hive.buffalo.edu
NEXT_PUBLIC_API_URL=https://api.hive.buffalo.edu

# Authentication
NEXTAUTH_URL=https://hive.buffalo.edu
NEXTAUTH_SECRET=generate-a-secure-random-string-here

# Email Configuration (Using Firebase)
EMAIL_FROM=noreply@hive.buffalo.edu
EMAIL_REPLY_TO=support@hive.buffalo.edu

# SendGrid (Optional - for better email deliverability)
SENDGRID_API_KEY=your-sendgrid-api-key

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=hive
SENTRY_PROJECT=hive-web
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true
NEXT_PUBLIC_MAINTENANCE_MODE=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=600

# Campus Configuration
NEXT_PUBLIC_CAMPUS_NAME="University at Buffalo"
NEXT_PUBLIC_CAMPUS_DOMAIN=buffalo.edu
NEXT_PUBLIC_CAMPUS_TIMEZONE="America/New_York"

# Storage Limits (in MB)
MAX_UPLOAD_SIZE=10
MAX_PROFILE_IMAGE_SIZE=5
MAX_POST_IMAGES=4

# Security
CSP_REPORT_URI=https://hive.buffalo.edu/api/csp-report
ALLOWED_ORIGINS=https://hive.buffalo.edu,https://buffalo.edu

# Redis (for session management)
REDIS_URL=redis://localhost:6379

# Database Backup
BACKUP_CRON="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Monitoring
UPTIME_ROBOT_API_KEY=your-uptime-robot-key
DATADOG_API_KEY=your-datadog-key

# CDN
NEXT_PUBLIC_CDN_URL=https://cdn.hive.buffalo.edu

# Development/Staging Toggle
NODE_ENV=production
NEXT_PUBLIC_ENV=production