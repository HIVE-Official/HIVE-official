{
  "buildCommand": "pnpm install && pnpm --filter=web build",
  "outputDirectory": "apps/web/.next",
  "installCommand": "npm install -g pnpm && pnpm install --frozen-lockfile",
  "framework": "nextjs",
  "functions": {
    "apps/web/src/app/api/**": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=0, stale-while-revalidate"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
