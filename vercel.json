{
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/next"
    }
  ],
  "buildCommand": "cd apps/web && NEXT_FONT_SKIP_DOWNLOAD=1 npx next build",
  "outputDirectory": "apps/web/.next",
  "installCommand": "npm install -g pnpm@9.1.1 && pnpm install --frozen-lockfile",
  "framework": "nextjs",
  "functions": {
    "apps/web/src/app/api/**": {
      "maxDuration": 30
    }
  }
} 