{
  "extends": "../config/typescript/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@hive/core": ["../core/src"],
      "@hive/hooks": ["../hooks/src"],
      "@hive/auth-logic": ["../auth-logic/src"],
      "@hive/tokens": ["../tokens/src"]
    },
    "resolveJsonModule": true
  },
  "include": ["index.ts", "src/**/*"],
  "references": [
    { "path": "../core" },
    { "path": "../hooks" },
    { "path": "../auth-logic" },
    { "path": "../tokens" }
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.stories.*",
    "**/*.test.*",
    ".storybook"
  ]
}
