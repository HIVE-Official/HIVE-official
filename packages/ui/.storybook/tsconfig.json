{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node", "@storybook/react"]
  },
  "include": [
    "../src/**/*",
    "../src/**/*.stories.*",
    "./**/*"
  ],
  "exclude": [
    "../node_modules",
    "../dist"
  ]
} 