{
  "extends": "../config/typescript/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmitOnError": false,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "noEmit": false,
    "paths": {
      "@/*": ["./src/*"] 
    },
    "resolveJsonModule": true
  },
  "include": [
    "src/index-minimal.ts",
    "src/lib/utils.ts",
    "src/lib/motion.ts",
    "src/contexts/hive-auth-context.tsx",
    "src/components/auth/email-gate.tsx",
    "src/components/auth/CheckEmailInfo.tsx", 
    "src/components/auth/school-pick.tsx",
    "src/components/loading/LoadingOrchestrator.tsx",
    "src/components/onboarding/create-profile-step.tsx",
    "src/components/onboarding/academic-step.tsx",
    "src/components/onboarding/interests-selection-step.tsx",
    "src/components/onboarding/welcome-role-step.tsx",
    "src/components/onboarding/alumni-coming-soon-step.tsx",
    "src/components/onboarding/onboarding-complete-step.tsx",
    "src/components/profile/bento-profile-dashboard.tsx",
    "src/components/profile/enhanced-profile-header.tsx",
    "src/components/profile/enhanced-profile-navigation.tsx", 
    "src/components/profile/enhanced-profile-settings.tsx",
    "src/components/profile/campus-activity-feed.tsx",
    "src/components/profile/profile-dashboard-cards.tsx",
    "src/components/profile/cross-slice-integration.tsx",
    "src/components/spaces/space-request-form.tsx",
    "src/components/hive-button.tsx",
    "src/components/hive-input.tsx",
    "src/components/hive-card.tsx",
    "src/components/hive-badge.tsx",
    "src/components/hive-modal.tsx",
    "src/components/hive-logo.tsx",
    "src/atomic/foundations/typography-composition.ts",
    "src/atomic/foundations/color-composition.ts", 
    "src/atomic/foundations/layout-composition.ts",
    "src/atomic/foundations/icon-composition.ts",
    "src/atomic/foundations/motion-composition.ts",
    "src/atomic/foundations/shadow-composition.ts",
    "src/atomic/foundations/border-composition.ts",
    "src/atomic/foundations/interaction-composition.ts",
    "src/atomic/molecules/user-identity.tsx",
    "src/atomic/molecules/social-interaction.tsx",
    "src/atomic/molecules/comprehensive-card.tsx", 
    "src/atomic/molecules/navigation-menu.tsx",
    "src/atomic/molecules/form-field.tsx",
    "src/firebase/client-config.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts", 
    "**/*.spec.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "node_modules",
    "dist"
  ]
}