'use client';

import React from 'react';
import { cn } from '../../lib/utils';
import { Card } from '../../atomic/ui/card';
import { Text } from '../atoms/text';
import { Badge } from '../atoms/badge';

export interface StatCardProps {
  title: string;
  value: string | number;
  description?: string;
  trend?: {
    value: number;
    direction: 'up' | 'down' | 'neutral';
    label?: string;
  };
  icon?: React.ReactNode;
  variant?: 'default' | 'compact' | 'detailed';
  className?: string;
}

export function StatCard({
  title,
  value,
  description,
  trend,
  icon,
  variant = 'default',
  className
}: StatCardProps) {
  const getTrendColor = (direction: 'up' | 'down' | 'neutral') => {
    switch (direction) {
      case 'up':
        return 'text-[var(--hive-status-success)]';
      case 'down':
        return 'text-[var(--hive-status-error)]';
      default:
        return 'text-[var(--hive-text-secondary)]';
    }
  };

  const getTrendIcon = (direction: 'up' | 'down' | 'neutral') => {
    switch (direction) {
      case 'up':
        return '↗';
      case 'down':
        return '↘';
      default:
        return '→';
    }
  };

  if (variant === 'compact') {
    return (
      <Card className={cn(
        'p-4 hover:shadow-md transition-shadow',
        className
      )}>
        <div className="flex items-center justify-between">
          <div className="flex items-center space-x-3">
            {icon && (
              <div className="text-[var(--hive-brand-primary)]">
                {icon}
              </div>
            )}
            <div>
              <Text variant="body-sm" className="text-[var(--hive-text-secondary)]">
                {title}
              </Text>
              <Text variant="heading-sm" className="font-semibold">
                {value}
              </Text>
            </div>
          </div>
          {trend && (
            <Badge variant="secondary" className={getTrendColor(trend.direction)}>
              {getTrendIcon(trend.direction)} {trend.value}%
            </Badge>
          )}
        </div>
      </Card>
    );
  }

  return (
    <Card className={cn(
      'p-6 hover:shadow-lg transition-shadow',
      className
    )}>
      <div className="flex items-start justify-between">
        <div className="space-y-1">
          <Text variant="body-sm" className="text-[var(--hive-text-secondary)]">
            {title}
          </Text>
          <div className="flex items-baseline space-x-2">
            <Text variant="heading-lg" className="font-bold">
              {value}
            </Text>
            {trend && (
              <span className={cn(
                'text-sm font-medium flex items-center space-x-1',
                getTrendColor(trend.direction)
              )}>
                <span>{getTrendIcon(trend.direction)}</span>
                <span>{trend.value}%</span>
                {trend.label && (
                  <Text className="ml-1 text-xs">
                    {trend.label}
                  </Text>
                )}
              </span>
            )}
          </div>
          {description && (
            <Text variant="body-sm" className="text-[var(--hive-text-secondary)]">
              {description}
            </Text>
          )}
        </div>
        {icon && (
          <div className="text-[var(--hive-brand-primary)] text-2xl">
            {icon}
          </div>
        )}
      </div>
    </Card>
  );
}

// Preset configurations for common use cases
export const StatCardPresets: Record<string, unknown> = {
  // User engagement stats  UserStats: (props: Omit<StatCardProps, 'variant'>) => (
    <StatCard variant="detailed" {...props} />
  ),
  
  // Compact dashboard metrics  Metric: (props: Omit<StatCardProps, 'variant'>) => (
    <StatCard variant="compact" {...props} />
  ),
  
  // Analytics dashboard  Analytics: (props: Omit<StatCardProps, 'variant'>) => (
    <StatCard variant="detailed" {...props} />
  )
};

