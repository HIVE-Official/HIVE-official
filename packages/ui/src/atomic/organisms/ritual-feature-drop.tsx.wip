'use client';

import * as React from 'react';
import { cn } from '../../lib/utils';
import { Card } from '../atoms/card';
import { Button } from '../atoms/button';
import { Progress } from '../atoms/progress';
import { Badge } from '../atoms/badge';
import { Sparkles, Users, Zap, Lock, Unlock, TrendingUp } from 'lucide-react';
import type { FeatureDropConfig } from '@hive/core';

export interface FeatureUsageStats {
  totalUsers: number;
  activeUsers: number;
  usageCount: number;
  unlockProgress: number; // 0-100
  isUnlocked: boolean;
}

export interface RitualFeatureDropProps {
  config: FeatureDropConfig;
  stats: FeatureUsageStats;
  onTryFeature?: () => void;
  className?: string;
}

/**
 * Feature Drop Renderer
 *
 * Shows progressive unlock countdown with real-time usage tracking
 * Students use a new feature to unlock it for everyone
 */
export const RitualFeatureDrop: React.FC<RitualFeatureDropProps> = ({
  config,
  stats,
  onTryFeature,
  className,
}) => {
  const feature = config.feature;
  const requiredUsage = config.unlockThreshold || 100;
  const currentUsage = stats.usageCount;
  const progressPercentage = Math.min(100, (currentUsage / requiredUsage) * 100);

  return (
    <div className={cn('space-y-6', className)}>
      {/* Feature Hero Card */}
      <Card className="overflow-hidden border-white/10 bg-gradient-to-br from-purple-900/20 via-[var(--hive-background-secondary)] to-black p-0">
        {/* Hero Header */}
        <div className="relative overflow-hidden bg-gradient-to-r from-purple-500/20 to-blue-500/20 px-6 py-8">
          <div className="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-30" />

          <div className="relative z-10 flex items-start gap-4">
            {feature.icon ? (
              <div className="flex h-16 w-16 items-center justify-center rounded-2xl bg-white/10 backdrop-blur-sm">
                <Sparkles className="h-8 w-8 text-[var(--hive-brand-primary)]" />
              </div>
            ) : null}

            <div className="flex-1 space-y-2">
              <div className="flex items-center gap-2">
                <Badge variant="outline" className="border-white/20 bg-white/5 text-xs uppercase tracking-[0.16em] text-white">
                  {stats.isUnlocked ? 'Unlocked' : 'Locked'}
                </Badge>
                {stats.isUnlocked && (
                  <Unlock className="h-4 w-4 text-[var(--hive-brand-primary)]" />
                )}
              </div>

              <h2 className="text-2xl font-bold text-white">{feature.name}</h2>

              {feature.description && (
                <p className="max-w-2xl text-white/70">{feature.description}</p>
              )}
            </div>
          </div>
        </div>

        {/* Progress Section */}
        <div className="space-y-4 p-6">
          {!stats.isUnlocked ? (
            <>
              {/* Unlock Progress */}
              <div className="space-y-3">
                <div className="flex items-center justify-between text-sm">
                  <span className="font-semibold text-white">
                    {currentUsage} / {requiredUsage} uses
                  </span>
                  <span className="text-white/60">
                    {Math.round(progressPercentage)}% unlocked
                  </span>
                </div>

                <Progress value={progressPercentage} className="h-3" />

                <div className="flex items-center gap-2 text-xs text-white/60">
                  <Users className="h-4 w-4" />
                  <span>{stats.activeUsers} students helping unlock</span>
                </div>
              </div>

              {/* CTA */}
              {onTryFeature && (
                <Button
                  onClick={onTryFeature}
                  size="lg"
                  className="w-full bg-gradient-to-r from-purple-500 to-blue-500 text-white hover:from-purple-600 hover:to-blue-600"
                >
                  <Zap className="mr-2 h-5 w-5" />
                  Try This Feature
                </Button>
              )}

              {/* Motivational Message */}
              <Card className="border-white/10 bg-white/5 p-4">
                <p className="text-center text-sm text-white/80">
                  {progressPercentage < 25 && "Just getting started! Every use counts."}
                  {progressPercentage >= 25 && progressPercentage < 50 && "Making progress! Keep going!"}
                  {progressPercentage >= 50 && progressPercentage < 75 && "Over halfway there! Almost unlocked!"}
                  {progressPercentage >= 75 && progressPercentage < 100 && "So close! Just a few more uses!"}
                </p>
              </Card>
            </>
          ) : (
            <>
              {/* Unlocked State */}
              <div className="space-y-4 text-center">
                <div className="mx-auto flex h-20 w-20 items-center justify-center rounded-full bg-[var(--hive-brand-primary)]/20">
                  <Unlock className="h-10 w-10 text-[var(--hive-brand-primary)]" />
                </div>

                <div className="space-y-2">
                  <h3 className="text-xl font-bold text-white">Feature Unlocked!</h3>
                  <p className="text-white/70">
                    {stats.totalUsers} students unlocked this feature for everyone
                  </p>
                </div>

                {onTryFeature && (
                  <Button
                    onClick={onTryFeature}
                    size="lg"
                    className="bg-[var(--hive-brand-primary)] text-black hover:bg-[var(--hive-brand-primary)]/90"
                  >
                    Use Feature Now
                  </Button>
                )}
              </div>

              {/* Usage Stats */}
              <div className="grid grid-cols-3 gap-4 border-t border-white/10 pt-4">
                <StatCard
                  icon={Users}
                  label="Total Users"
                  value={stats.totalUsers.toLocaleString()}
                />
                <StatCard
                  icon={Zap}
                  label="Active Now"
                  value={stats.activeUsers.toLocaleString()}
                />
                <StatCard
                  icon={TrendingUp}
                  label="Total Uses"
                  value={stats.usageCount.toLocaleString()}
                />
              </div>
            </>
          )}
        </div>
      </Card>

      {/* Feature Flags Info */}
      {config.featureFlags && config.featureFlags.length > 0 && (
        <Card className="border-white/10 bg-white/5 p-4">
          <div className="space-y-2">
            <h4 className="text-sm font-semibold uppercase tracking-[0.16em] text-white/60">
              Technical Details
            </h4>
            <div className="flex flex-wrap gap-2">
              {config.featureFlags.map((flag) => (
                <Badge
                  key={flag}
                  variant="secondary"
                  className="bg-white/10 font-mono text-xs text-white/80"
                >
                  {flag}
                </Badge>
              ))}
            </div>
          </div>
        </Card>
      )}
    </div>
  );
};

interface StatCardProps {
  icon: React.ComponentType<{ className?: string }>;
  label: string;
  value: string;
}

const StatCard: React.FC<StatCardProps> = ({ icon: Icon, label, value }) => {
  return (
    <div className="flex flex-col items-center gap-1 text-center">
      <Icon className="h-5 w-5 text-white/60" />
      <p className="text-lg font-bold text-white">{value}</p>
      <p className="text-xs text-white/50">{label}</p>
    </div>
  );
};
