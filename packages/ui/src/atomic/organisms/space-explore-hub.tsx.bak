'use client';

import React from 'react';
import { motion } from '../../components/framer-motion-proxy';
import { cn } from '../../lib/utils';
import { SpaceCategoryCard, SpaceCategoryType, SPACE_CATEGORIES } from '../atoms/space-category-card';
import { Search, Filter, TrendingUp, Clock } from 'lucide-react';

export interface SpaceExploreStats {
  totalSpaces: number;
  totalMembers: number;
  activeToday: number;
  newThisWeek: number;
}

export interface SpaceCategoryStats {
  type: SpaceCategoryType;
  count: number;
  trending?: boolean;
  recentActivity?: number;
}

export interface SpaceExploreHubProps {
  stats: SpaceExploreStats;
  categories: SpaceCategoryStats[];
  onCategoryClick?: (type: SpaceCategoryType) => void;
  onSearch?: (query: string) => void;
  onShowFilters?: () => void;
  searchQuery?: string;
  isLoading?: boolean;
  className?: string;
}

export const SpaceExploreHub: React.FC<SpaceExploreHubProps> = ({
  stats,
  categories,
  onCategoryClick,
  onSearch,
  onShowFilters,
  searchQuery = '',
  isLoading = false,
  className
}) => {
  const [localSearchQuery, setLocalSearchQuery] = React.useState(searchQuery);

  const handleSearchSubmit = (e: React.FormEvent) => {
    e.preventDefault();
    onSearch?.(localSearchQuery);
  };

  const handleSearchChange = (e: React.ChangeEvent<HTMLInputElement>) => {
    setLocalSearchQuery(e.target.value);
    // Debounced search could be added here
  };

  if (isLoading) {
    return (
      <div className={cn('space-y-8', className)}>
        {/* Loading Header */}
        <div className="space-y-4">
          <div className="h-12 bg-[var(--hive-background-secondary)]/50 rounded-2xl animate-pulse" />
          <div className="h-6 bg-[var(--hive-background-secondary)]/30 rounded-xl animate-pulse max-w-md" />
        </div>

        {/* Loading Search */}
        <div className="h-14 bg-[var(--hive-background-secondary)]/50 rounded-2xl animate-pulse" />

        {/* Loading Stats */}
        <div className="grid grid-cols-4 gap-4">
          {[...Array(4)].map((_, i) => (
            <div key={i} className="h-24 bg-[var(--hive-background-secondary)]/50 rounded-2xl animate-pulse" />
          ))}
        </div>

        {/* Loading Categories */}
        <div className="grid grid-cols-2 gap-6">
          {[...Array(4)].map((_, i) => (
            <div key={i} className="h-40 bg-[var(--hive-background-secondary)]/50 rounded-2xl animate-pulse" />
          ))}
        </div>
      </div>
    );
  }

  return (
    <motion.div
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      transition={{ duration: 0.6, ease: [0.23, 1, 0.32, 1] }}
      className={cn('space-y-8', className)}
    >
      {/* Header */}
      <div className="text-center space-y-4">
        <motion.h1
          initial={{ opacity: 0, y: 10 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.1 }}
          className="text-4xl font-bold text-[var(--hive-text-primary)] tracking-tight"
        >
          Explore Campus Spaces
        </motion.h1>
        
        <motion.p
          initial={{ opacity: 0, y: 10 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.2 }}
          className="text-lg text-[var(--hive-text-secondary)] max-w-2xl mx-auto leading-relaxed"
        >
          Discover and join communities that match your interests, academic goals, and campus life
        </motion.p>
      </div>

      {/* Search */}
      <motion.div
        initial={{ opacity: 0, y: 10 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ delay: 0.3 }}
      >
        <form onSubmit={handleSearchSubmit} className="relative max-w-2xl mx-auto">
          <div className="relative">
            <Search className="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-[var(--hive-text-muted)]" />
            <input
              type="text"
              value={localSearchQuery}
              onChange={handleSearchChange}
              placeholder="Search for spaces, courses, organizations..."
              className={cn(
                'w-full pl-12 pr-16 py-4 rounded-2xl border transition-all duration-300',
                'bg-[var(--hive-background-secondary)]/80 backdrop-blur-xl',
                'border-[var(--hive-border-primary)]/30 focus:border-[var(--hive-brand-primary)]/50',
                'text-[var(--hive-text-primary)] placeholder:text-[var(--hive-text-muted)]',
                'focus:outline-none focus:ring-0 focus:shadow-lg focus:shadow-[var(--hive-brand-primary)]/10'
              )}
            />
            
            {onShowFilters && (
              <button
                type="button"
                onClick={onShowFilters}
                className={cn(
                  'absolute right-3 top-1/2 transform -translate-y-1/2',
                  'w-8 h-8 rounded-xl flex items-center justify-center transition-colors duration-200',
                  'text-[var(--hive-text-muted)] hover:text-[var(--hive-brand-primary)]',
                  'hover:bg-[var(--hive-background-primary)]/50'
                )}
              >
                <Filter className="w-4 h-4" />
              </button>
            )}
          </div>
        </form>
      </motion.div>

      {/* Stats */}
      <motion.div
        initial={{ opacity: 0, y: 10 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ delay: 0.4 }}
        className="grid grid-cols-2 md:grid-cols-4 gap-4"
      >
        <div className="bg-[var(--hive-background-secondary)]/60 backdrop-blur-xl border border-[var(--hive-border-primary)]/20 rounded-2xl p-6 text-center">
          <div className="text-2xl font-bold text-[var(--hive-brand-primary)] mb-1">
            {stats.totalSpaces.toLocaleString()}
          </div>
          <div className="text-sm text-[var(--hive-text-secondary)]">Total Spaces</div>
        </div>

        <div className="bg-[var(--hive-background-secondary)]/60 backdrop-blur-xl border border-[var(--hive-border-primary)]/20 rounded-2xl p-6 text-center">
          <div className="text-2xl font-bold text-[var(--hive-text-primary)] mb-1">
            {stats.totalMembers.toLocaleString()}
          </div>
          <div className="text-sm text-[var(--hive-text-secondary)]">Active Members</div>
        </div>

        <div className="bg-[var(--hive-background-secondary)]/60 backdrop-blur-xl border border-[var(--hive-border-primary)]/20 rounded-2xl p-6 text-center">
          <div className="flex items-center justify-center gap-1 text-2xl font-bold text-[var(--hive-status-success)] mb-1">
            <TrendingUp className="w-5 h-5" />
            {stats.activeToday.toLocaleString()}
          </div>
          <div className="text-sm text-[var(--hive-text-secondary)]">Active Today</div>
        </div>

        <div className="bg-[var(--hive-background-secondary)]/60 backdrop-blur-xl border border-[var(--hive-border-primary)]/20 rounded-2xl p-6 text-center">
          <div className="flex items-center justify-center gap-1 text-2xl font-bold text-[var(--hive-brand-secondary)] mb-1">
            <Clock className="w-5 h-5" />
            {stats.newThisWeek.toLocaleString()}
          </div>
          <div className="text-sm text-[var(--hive-text-secondary)]">New This Week</div>
        </div>
      </motion.div>

      {/* Category Cards */}
      <motion.div
        initial={{ opacity: 0 }}
        animate={{ opacity: 1 }}
        transition={{ delay: 0.5, duration: 0.8 }}
      >
        <div className="mb-6">
          <h2 className="text-2xl font-bold text-[var(--hive-text-primary)] mb-2">
            Browse by Category
          </h2>
          <p className="text-[var(--hive-text-secondary)]">
            Find spaces that match your campus experience
          </p>
        </div>

        <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
          {categories.map((categoryStats, index) => {
            const categoryData = {
              ...SPACE_CATEGORIES[categoryStats.type],
              count: categoryStats.count
            };

            return (
              <motion.div
                key={categoryStats.type}
                initial={{ opacity: 0, y: 20 }}
                animate={{ opacity: 1, y: 0 }}
                transition={{ 
                  delay: 0.6 + (index * 0.1), 
                  duration: 0.5,
                  ease: [0.23, 1, 0.32, 1]
                }}
                className="relative"
              >
                {/* Trending Badge */}
                {categoryStats.trending && (
                  <div className="absolute -top-2 -right-2 z-20 bg-[var(--hive-status-warning)]/20 backdrop-blur-xl border border-[var(--hive-status-warning)]/40 rounded-full px-3 py-1">
                    <div className="flex items-center gap-1">
                      <TrendingUp className="w-3 h-3 text-[var(--hive-status-warning)]" />
                      <span className="text-xs font-bold text-[var(--hive-status-warning)]">Trending</span>
                    </div>
                  </div>
                )}
                
                <SpaceCategoryCard
                  category={categoryData}
                  onClick={onCategoryClick}
                />
              </motion.div>
            );
          }}
        </div>
      </motion.div>

      {/* Quick Actions */}
      <motion.div
        initial={{ opacity: 0, y: 10 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ delay: 0.8 }}
        className="text-center pt-4"
      >
        <p className="text-sm text-[var(--hive-text-muted)] mb-4">
          Can't find what you're looking for?
        </p>
        
        <div className="flex justify-center gap-4">
          <button
            onClick={() => onSearch?.('')}
            className={cn(
              'px-6 py-3 rounded-2xl border transition-all duration-300',
              'bg-[var(--hive-background-secondary)]/60 border-[var(--hive-border-primary)]/30',
              'text-[var(--hive-text-secondary)] hover:text-[var(--hive-brand-primary)]',
              'hover:border-[var(--hive-brand-primary)]/40 hover:bg-[var(--hive-brand-primary)]/5'
            )}
          >
            Browse All Spaces
          </button>

          <button
            onClick={onShowFilters}
            className={cn(
              'px-6 py-3 rounded-2xl border transition-all duration-300',
              'bg-[var(--hive-brand-primary)]/10 border-[var(--hive-brand-primary)]/30',
              'text-[var(--hive-brand-primary)] hover:bg-[var(--hive-brand-primary)]/20',
              'hover:border-[var(--hive-brand-primary)]/50'
            )}
          >
            Advanced Filters
          </button>
        </div>
      </motion.div>
    </motion.div>
  );
};

export default SpaceExploreHub;