                            <div className={`w-4 h-4 rounded-full transition-all duration-200 ${
                              showPhotoMetadata 
                                ? 'bg-hive-brand-primary ml-5' 
                                : 'bg-white ml-0.5'
                            }`}></div>
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                {/* Right Panel - Profile Information & Settings */}
                <div className="w-1/2 p-4 overflow-y-auto scrollbar-thin scrollbar-track-transparent scrollbar-thumb-white/20">
                  <div className="space-y-4">
                    
                    {/* Profile Information */}
                    <div className="space-y-4">
                      <h4 className="text-lg font-semibold text-hive-text-primary">Profile Information</h4>
                      
                      <div className="space-y-4 p-4 bg-white/5 border border-white/10 rounded-xl">
                        <div>
                          <label className="text-sm font-medium text-hive-text-secondary block mb-2">Full Name</label>
                          <input 
                            type="text" 
                            value={profileName}
                            onChange={(e) => setProfileName(e.target.value)}
                            className="w-full bg-hive-background-tertiary/80 text-hive-text-primary border border-white/20 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-hive-brand-secondary transition-all duration-200"
                          />
                        </div>
                        
                        <div>
                          <label className="text-sm font-medium text-hive-text-secondary block mb-2">Year & Major</label>
                          <input 
                            type="text" 
                            value={profileMajor}
                            onChange={(e) => setProfileMajor(e.target.value)}
                            className="w-full bg-hive-background-tertiary/80 text-hive-text-primary border border-white/20 rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-hive-brand-secondary transition-all duration-200"
                          />
                        </div>
                      </div>
                    </div>

                    {/* Custom Status Management */}
                    <div className="space-y-4">
                      <div className="flex items-center justify-between">
                        <h4 className="text-lg font-semibold text-hive-text-primary">Custom Status</h4>
                        <button 
                          onClick={() => setEditingStatus(!editingStatus)}
