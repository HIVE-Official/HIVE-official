// Mock firebase admin for client-side usage
// In production, this should only be used on server-side

export const adminFirestore: Record<string, unknown> = {
  collection: (_name: string) => ({
    doc: (_id: string) => ({
      get: async () => null,
      set: async (data: Record<string, unknown>) => data,
      update: async (data: Record<string, unknown>) => data,
      delete: async () => true,
    }),
    add: async (data: Record<string, unknown>) => ({ id: 'mock-id', ...(data as object) }),
    where: (_field: string, _op: string, _value: unknown) => ({
      get: async () => ({ docs: [] }),
    }),
  }),
  
  batch: () => ({
    set: () => {},
    update: () => {},
    delete: () => {},
    commit: async () => true,
  }),
  
  runTransaction: async (fn: () => void) => fn(),
};