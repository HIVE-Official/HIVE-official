    out: 'var(--hive-ease-out)',              // cubic-bezier(0.0, 0.0, 0.2, 1)  inOut: 'var(--hive-ease-in-out)',         // cubic-bezier(0.4, 0.0, 0.2, 1) smooth: 'var(--hive-ease-smooth)',        // cubic-bezier(0.4, 0.0, 0.6, 1)
