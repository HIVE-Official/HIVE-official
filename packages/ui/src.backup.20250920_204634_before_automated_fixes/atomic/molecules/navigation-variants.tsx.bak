            className={cn(
              'flex flex-col items-center space-y-1 p-2 rounded-2xl transition-all duration-200',
              isActive
                ? 'text-[var(--hive-brand-secondary)]'
                : 'text-[var(--hive-text-secondary)]'
            )}
          >
            <div className={cn(
              'w-10 h-10 rounded-2xl flex items-center justify-center transition-all duration-200',
              isActive
                ? 'bg-[var(--hive-brand-secondary)]/10 border border-[var(--hive-brand-secondary)]/20'
                : 'bg-transparent'
            )}>
              <Icon className="h-5 w-5" />
            </div>
            <span className="text-xs font-medium">{item.label}</span>
          </button>
