{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "index.ts",
    "index.build.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "**/*.stories.*",
    "**/*.test.*",
    "**/*.spec.*",
    "node_modules",
    "dist",
    "src/atomic/04-Profile/molecules/profile-bento-grid.tsx",
    "src/atomic/04-Profile/templates/profile-view-layout.tsx"
  ]
}
