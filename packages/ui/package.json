{
  "name": "@hive/ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./lib/utils": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "node ../../node_modules/storybook/bin/index.cjs dev -p 6006",
    "build": "npx tsc && node ../../node_modules/tailwindcss/lib/cli.js -i ./src/styles.css -o ./dist/styles.css --minify && node fix-imports.cjs",
    "build-storybook": "node ../../node_modules/storybook/bin/index.cjs build --disable-telemetry",
    "storybook": "node ../../node_modules/storybook/bin/index.cjs dev -p 6006",
    "lint": "npx eslint . --max-warnings 15",
    "clean": "rm -rf dist",
    "audit:components": "tsx src/scripts/component-audit.ts",
    "audit:watch": "tsx --watch src/scripts/component-audit.ts",
    "story:generate": "tsx src/scripts/story-generator.ts",
    "story:validate": "tsx src/scripts/story-validator.ts",
    "quality:check": "npm run audit:components && npm run story:validate && npm run lint"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.4",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.28.0",
    "@hive/eslint-config": "workspace:*",
    "@hive/typescript-config": "workspace:*",
    "@storybook/addon-actions": "8.4.7",
    "@storybook/addon-essentials": "8.4.7",
    "@storybook/addon-interactions": "8.4.7",
    "@storybook/addon-links": "8.4.7",
    "@storybook/blocks": "8.4.7",
    "@storybook/react": "8.4.7",
    "@storybook/react-vite": "8.4.7",
    "@storybook/test": "8.4.7",
    "@types/eslint__js": "^8.42.3",
    "@types/lodash": "^4.17.7",
    "@types/node": "^20.19.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "eslint": "^9.28.0",
    "eslint-plugin-storybook": "^0.11.1",
    "postcss": "^8.5.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "storybook": "8.4.7",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.18.2",
    "vite": "^5.4.19"
  },
  "overrides": {
    "eslint": "$eslint"
  },
  "dependencies": {
    "@hive/core": "workspace:*",
    "@hive/tokens": "workspace:*",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tanstack/react-query": "^5.80.7",
    "class-variance-authority": "^0.7.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.17.3",
    "lodash": "^4.17.21",
    "lucide-react": "^0.411.0",
    "next-themes": "^0.4.6",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1"
  }
}
