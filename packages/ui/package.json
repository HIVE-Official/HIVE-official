{
  "name": "@hive/ui",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/ui/index.js",
  "types": "./dist/ui/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/ui/index.d.ts",
      "import": "./dist/ui/index.js",
      "require": "./dist/ui/index.js",
      "default": "./dist/ui/index.js"
    },
    "./lib/utils": {
      "types": "./dist/src/lib/utils.d.ts",
      "import": "./dist/src/lib/utils.js",
      "require": "./dist/src/lib/utils.js",
      "default": "./dist/src/lib/utils.js"
    },
    "./src/components/framer-motion-proxy": {
      "types": "./dist/src/components/framer-motion-proxy.d.ts",
      "import": "./dist/src/components/framer-motion-proxy.js",
      "require": "./dist/src/components/framer-motion-proxy.js",
      "default": "./dist/src/components/framer-motion-proxy.js"
    },
    "./styles.css": {
      "style": "./dist/styles.css",
      "default": "./dist/styles.css"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "node ../../node_modules/storybook/bin/index.cjs dev -p 6006",
    "build": "npx tsc && cp ./src/styles.css ./dist/styles.css && node fix-imports.cjs",
    "build-storybook": "node ../../node_modules/storybook/bin/index.cjs build --disable-telemetry",
    "storybook": "node ../../node_modules/storybook/bin/index.cjs dev -p 6006",
    "lint": "npx eslint . --max-warnings 15",
    "clean": "rm -rf dist",
    "generate:stories": "tsx scripts/generate-story.ts --all",
    "generate:story": "tsx scripts/generate-story.ts",
    "create:atom": "tsx scripts/create-component.ts --type=atom --name",
    "create:molecule": "tsx scripts/create-component.ts --type=molecule --name",
    "create:organism": "tsx scripts/create-component.ts --type=organism --name",
    "create:template": "tsx scripts/create-component.ts --type=template --name",
    "audit:components": "tsx src/scripts/component-audit.ts",
    "audit:watch": "tsx --watch src/scripts/component-audit.ts",
    "story:validate": "tsx src/scripts/story-validator.ts",
    "visual:test": "npm run build-storybook && npx chromatic --project-token=<your-project-token>",
    "quality:check": "npm run lint"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/compat": "^1.2.4",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.28.0",
    "@storybook/addon-a11y": "8.4.7",
    "@storybook/addon-actions": "8.4.7",
    "@storybook/addon-essentials": "8.4.7",
    "@storybook/addon-interactions": "8.4.7",
    "@storybook/addon-links": "8.4.7",
    "@storybook/addon-storysource": "8.4.7",
    "@storybook/blocks": "8.4.7",
    "@storybook/react": "8.4.7",
    "@storybook/react-vite": "8.4.7",
    "@storybook/test": "8.4.7",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/eslint__js": "^8.42.3",
    "@types/lodash": "^4.17.7",
    "@types/node": "^20.19.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "clsx": "^2.1.1",
    "eslint": "^9.28.0",
    "eslint-plugin-storybook": "^0.11.1",
    "jest-axe": "^10.0.0",
    "storybook": "8.4.7",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.18.2",
    "vite": "^5.4.19"
  },
  "overrides": {
    "eslint": "$eslint"
  },
  "dependencies": {
    "@hive/core": "workspace:*",
    "@hive/tokens": "workspace:*",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tanstack/react-query": "^5.80.7",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.0",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^11.11.17",
    "lodash": "^4.17.21",
    "lucide-react": "^0.411.0",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.5",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-easy-crop": "^5.5.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  }
}
