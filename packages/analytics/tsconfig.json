{
  "extends": "../config/typescript/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "../",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@hive/*": ["../*/src"]
    },
    "types": ["node", "react"]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "../core/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.*",
    "**/*.spec.*",
    "**/*.stories.*",
    "../core/src/utils/code-analyzer.ts"
  ]
}
