{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "isolatedModules": false,
    "skipLibCheck": true,
    "composite": false,
    "noEmit": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "dist",
    "**/dist",
    "**/*.test.*",
    "**/*.spec.*",
    "**/*.stories.*",
    "**/test",
    "**/tests"
  ]
} 