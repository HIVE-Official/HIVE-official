{
  "extends": "../config/typescript/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "src",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "pretty": true,
    "composite": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules", 
    "dist", 
    "**/*.test.ts", 
    "**/*.test.tsx", 
    "**/*.spec.ts", 
    "**/*.spec.tsx", 
    "src/utils/code-analyzer.ts"
  ]
}
