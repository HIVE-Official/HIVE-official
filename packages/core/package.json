    "typescript": "^5.8.3"
  },
  "dependencies": {
    "firebase": "^11.0.0",
    "firebase-admin": "^13.2.0",
    "zod": "^3.25.64",
    "zustand": "^5.0.5"
  },
  "overrides": {
    "eslint": "$eslint"
  },
  "keywords": [],
  "author": ""
