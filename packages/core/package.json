{
  "name": "@hive/core",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=4096 tsup src/index.ts --format cjs,esm --dts",
    "lint": "eslint .",
    "typecheck": "npx tsc --noEmit",
    "dev": "npx tsc --build --watch",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@hive/eslint-config": "workspace:*",
    "@hive/typescript-config": "workspace:*",
    "@types/node": "^24.0.4",
    "cross-env": "^7.0.3",
    "eslint": "^9.29.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@upstash/ratelimit": "^2.0.5",
    "@upstash/redis": "^1.35.0",
    "firebase": "^11.9.1",
    "firebase-admin": "^13.4.0",
    "zod": "^3.25.67",
    "zustand": "^5.0.5"
  },
  "overrides": {
    "eslint": "$eslint"
  },
  "keywords": [],
  "author": ""
}
