{
  "name": "@hive/core",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "require": "./dist/server.js",
      "import": "./dist/server.js",
      "default": "./dist/server.js"
    },
    "./types/profile-system": {
      "types": "./dist/types/profile-system.d.ts",
      "require": "./dist/types/profile-system.js",
      "import": "./dist/types/profile-system.js",
      "default": "./dist/types/profile-system.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npx tsc --noEmitOnError false",
    "dev": "npx tsc --watch",
    "clean": "npx rimraf dist",
    "lint": "npx eslint . --max-warnings 10",
    "typecheck": "npx tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.28.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vitest": "^2.1.9"
  },
  "dependencies": {
    "@hive/firebase": "workspace:*",
    "firebase": "^11.0.0",
    "firebase-admin": "^13.2.0",
    "zod": "^3.25.64",
    "zustand": "^5.0.5"
  },
  "overrides": {
    "eslint": "$eslint"
  }
}
