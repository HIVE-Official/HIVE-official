{
  "name": "@hive/core",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "require": "./dist/server.js",
      "import": "./dist/server.js"
    },
    "./utils/logger": {
      "types": "./dist/utils/logger.d.ts",
      "require": "./dist/utils/logger.js",
      "import": "./dist/utils/logger.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npx tsc",
    "dev": "npx tsc --watch",
    "clean": "npx rimraf dist",
    "lint": "npx eslint . --max-warnings 10",
    "typecheck": "npx tsc --noEmit"
  },
  "devDependencies": {
    "@hive/eslint-config": "workspace:*",
    "@hive/typescript-config": "workspace:*",
    "@types/node": "^20.0.0",
    "eslint": "^8.57.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@hive/validation": "workspace:*",
    "firebase": "^11.0.0",
    "firebase-admin": "^13.2.0",
    "zod": "^3.25.64",
    "zustand": "^5.0.5"
  },
  "overrides": {
    "eslint": "$eslint"
  }
}
