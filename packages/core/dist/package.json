{
  "name": "@hive/core",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npx tsc && npx cpy package.json dist",
    "dev": "npx tsc --watch",
    "clean": "rm -rf dist",
    "lint": "npx eslint . --max-warnings 10",
    "typecheck": "npx tsc --noEmit"
  },
  "devDependencies": {
    "@hive/eslint-config": "workspace:*",
    "@hive/typescript-config": "workspace:*",
    "@types/node": "^20.0.0",
    "eslint": "^9.28.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "firebase": "^11.0.0",
    "firebase-admin": "^13.2.0",
    "zod": "^3.25.64",
    "zustand": "^5.0.5"
  },
  "overrides": {
    "eslint": "$eslint"
  }
}
