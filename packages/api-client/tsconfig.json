{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "..",
    "composite": true,
    "noEmit": false,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@hive/core": ["../core/src"]
    }
  },
  "include": ["src/**/*", "../core/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
