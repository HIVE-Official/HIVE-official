{
  "extends": "../config/typescript/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "../",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@hive/*": ["../*/src"]
    }
  },
  "include": ["src/**/*", "../core/src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "../core/src/utils/code-analyzer.ts"
  ]
}
