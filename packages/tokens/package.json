{
  "name": "@hive/tokens",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "require": "./dist/src/index.js",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    },
    "./topology/slot-kit": {
      "types": "./dist/src/topology/slot-kit.d.ts",
      "default": "./dist/src/topology/slot-kit.js"
    },
    "./hive-tokens-generated.css": {
      "style": "./hive-tokens-generated.css",
      "default": "./hive-tokens-generated.css"
    },
    "./tailwind.config.master": {
      "types": "./tailwind.config.master.ts",
      "default": "./tailwind.config.master.ts"
    }
  },
  "scripts": {
    "build": "npm run build:types && npm run build:css",
    "build:types": "npx tsc",
    "build:css": "tsx scripts/generate-css.ts",
    "postbuild": "npm run build:css",
    "lint": "npx eslint . --max-warnings 10",
    "typecheck": "npx tsc --noEmit"
  },
  "dependencies": {
    "tsx": "^4.19.2"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "eslint": "^9.28.0",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "eslint": "$eslint"
  }
}
