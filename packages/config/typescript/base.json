{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@hive/ui": ["../ui/src"],
      "@hive/ui/*": ["../ui/src/*"],
      "@hive/core": ["../core/src"],
      "@hive/core/*": ["../core/src/*"],
      "@hive/hooks": ["../hooks/src"],
      "@hive/hooks/*": ["../hooks/src/*"],
      "@hive/auth-logic": ["../auth-logic/src"],
      "@hive/auth-logic/*": ["../auth-logic/src/*"],
      "@hive/api-client": ["../api-client/src"],
      "@hive/api-client/*": ["../api-client/src/*"],
      "@hive/validation": ["../validation/src"],
      "@hive/validation/*": ["../validation/src/*"],
      "@hive/analytics": ["../analytics/src"],
      "@hive/analytics/*": ["../analytics/src/*"],
      "@hive/utilities": ["../utilities/src"],
      "@hive/utilities/*": ["../utilities/src/*"],
      "@hive/tokens": ["../tokens/src"],
      "@hive/tokens/*": ["../tokens/src/*"],
      "@hive/i18n": ["../i18n/src"],
      "@hive/i18n/*": ["../i18n/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.*", "**/*.spec.*"]
}
