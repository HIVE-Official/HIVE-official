{
  // TypeScript configuration for auth-logic package
  "extends": "../config/typescript/base.json",
  "compilerOptions": {
    "types": ["node", "vitest/globals"],
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@hive/core": ["../core/src"],
      "@hive/hooks": ["../hooks/src"],
      "@hive/ui": ["../ui/src"],
      "@hive/tokens": ["../tokens"],
      "@hive/utilities": ["../utilities/src"],
      "@hive/validation": ["../validation/src"]
    },
    "typeRoots": ["../../node_modules/@types", "../../node_modules"]
  },
  "include": ["src", "vitest.config.ts"],
  "exclude": ["dist", "build", "node_modules"]
}
