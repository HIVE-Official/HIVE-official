{
  // TypeScript configuration for auth-logic package
  "extends": "@hive/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "composite": false,
    "noEmit": false,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node", "react", "react-dom", "vitest/globals"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    { "path": "../core" }
  ]
}
