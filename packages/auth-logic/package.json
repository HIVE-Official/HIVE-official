    "eslint": "^9.29.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "eslint": "$eslint"
  },
  "dependencies": {
    "@hive/core": "workspace:*",
    "firebase": "^11.9.1",
    "react": "^19.1.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  }
