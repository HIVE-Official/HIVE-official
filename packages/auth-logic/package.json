{
  "name": "@hive/auth-logic",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "pnpm run clean",
    "build": "tsup src/index.ts --format cjs,esm --dts --sourcemap",
    "lint": "eslint .",
    "typecheck": "npx tsc --noEmit",
    "dev": "npx tsc --build --watch",
    "clean": "rm -rf dist",
    "test": "vitest"
  },
  "dependencies": {
    "@hive/core": "workspace:*",
    "firebase": "^11.9.1",
    "firebase-admin": "^13.4.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@hive/eslint-config": "workspace:*",
    "@hive/typescript-config": "workspace:*",
    "@types/node": "^24.0.4",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.29.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
