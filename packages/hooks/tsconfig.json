{
  "extends": "../config/typescript/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@hive/core": ["../core/dist"],
      "@hive/auth-logic": ["../auth-logic/dist"],
      "@hive/api-client": ["../api-client/dist"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
